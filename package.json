{
  "name": "Qlapa Task",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "history": "^4.7.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "normalize.css": "^8.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-ga": "^2.4.1",
    "react-redux": "^5.0.7",
    "react-reveal": "^1.2.1",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^4.0.8",
    "react-scripts": "1.1.4",
    "redux": "^3.7.2",
    "redux-persist": "^5.9.1",
    "redux-thunk": "^2.2.0",
    "reset-css": "^3.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": ["prettier --single-quote --write", "git add"]
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "npm-run-all build:css --parallel watch:css start:js",
    "build": "npm-run-all build:css build:js",
    "lint": "npm-run-all lint:prettier lint:js",
    "test": "npm-run-all build:css test:js",
    "start:js": "react-scripts start",
    "build:js": "react-scripts build",
    "test:js": "react-scripts test --env=jsdom",
    "build:css":
      "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --parallel",
    "watch:css":
      "npm run build:css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive"
  },
  "devDependencies": {
    "node-sass-chokidar": "^1.1.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1"
  }
}
